@model IEnumerable<ShoppingCartItem>

@if (!Model.Any())
{
    <div class="text-center py-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-cart text-muted mb-2" viewBox="0 0 16 16">
            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        <p class="text-muted">Your cart is empty</p>
    </div>
}
else
{
    <div class="mini-cart-items">
        @foreach (var item in Model)
        {
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-4">
                        <img src="@item.Product.ImageUrl" class="img-fluid rounded-start" alt="@item.Product.Name">
                    </div>
                    <div class="col-8">
                        <div class="card-body py-2 px-3">
                            <h6 class="card-title mb-1">@item.Product.Name</h6>
                            <p class="card-text mb-1">
                                <small class="text-muted">Quantity: @item.Amount</small>
                            </p>
                            <p class="card-text">
                                <strong>$@((item.Amount * item.Product.Price).ToString("F2"))</strong>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="border-top pt-3 mt-3">
        <div class="d-flex justify-content-between mb-3">
            <strong>Total:</strong>
            <strong>$@Model.Sum(i => i.Amount * i.Product.Price).ToString("F2")</strong>
        </div>
        <a href="/ShoppingCart" class="btn btn-primary w-100 mb-2">View Cart</a>
        <button class="btn btn-outline-secondary w-100" data-bs-dismiss="offcanvas">
            Continue Shopping
        </button>
    </div>
}